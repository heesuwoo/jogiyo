        <input type="file" id="inputFile" />
        <input type="text" id="inputText" />
        <button onclick="submitFile()">업로드</button>

        script.
            function submitFile() {
                const f = document.querySelector("#inputFile");
                const t = document.querySelector("#inputText");

                console.log(f.files[0]);

                const reader = new FileReader();    //1

                reader.onload = () => { //3
                const strImg = reader.result;

                t.value;

                const payload = {
                    img: strImg,
                    text: t.value,
                };

                const xhr = new XMLHttpRequest();

                xhr.onload = () => {    //4
                    if (xhr.responseText === "success") {
                    // 끝
                    }
                };

                xhr.open("POST", "http://localhost:8081/setImg");
                xhr.setRequestHeader('Content-Type', 'application/json')
                xhr.send(JSON.stringify(payload));
                };

                reader.readAsDataURL(f.files[0]);   //2
            }
        